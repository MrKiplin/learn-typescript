{
  "name": "learn-typescript",
  "version": "1.1.0",
  "description": "A series of tasks to solve using TypeScript and TDD (Test Driven Development).",
  "repository": "https://github.com/MrKiplin/learn-typescript.git",
  "author": "MrKiplin <https://github.com/MrKiplin>",
  "license": "MIT",
  "scripts": {
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "jest": "^26.5.3",
    "ts-jest": "^26.4.1",
    "typescript": "^4.0.3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost"
  }
}
